---
import Button from './Button.astro';
---

<footer>
  <div class="footer-content">
    <h2>
      Counter the tides. Stand with the Truth.
      <br />
       Join The GUIDON.
    </h2>
    <a href="">
      <Button>APPLY NOW</Button>
    </a>
  </div>

  <div class="footer-credits">
    &copy; The GUIDON 2023.<br />Designed and developed by The GUIDON Graphic Design and Digital
    Development staffs 2023.
  </div>

  <div class="footer-bg"></div>
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #fff;
    height: 24rem;
    justify-content: center;
    position: relative;
  }

  .footer-content {
    position: absolute;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    row-gap: 2.5rem;
  }
  .footer-bg {
    position: absolute;
    inset: 0;
    background: url('/images/footer.png');
    background-size: cover;
    background-position: -200px;
    background-repeat: no-repeat;
    z-index: -9;
  }

  .footer-content h2 {
    font-family: var(--font-tiempos-headline);
    text-align: center;
    font-size: 1.75rem;
    font-weight: 700;
  }

  .footer-bg::after {
    content: '';
    position: absolute;
    inset: 0;
    -webkit-backdrop-filter: brightness(0.4);
    backdrop-filter: brightness(0.4);
  }

  .footer-credits {
    position: absolute;
    opacity: 0.7;
    bottom: 0;
    font-family: var(--font-chivo);
    padding: 1.5rem;
    font-size: 0.75rem;
    font-weight: 400;
    text-align: center;
  }
  @media (max-width: 700px) {
    .footer-bg {
      background-position: 0;
    }
  }
</style>
