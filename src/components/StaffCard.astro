---
interface Props {
  title: string;
  description: string;
  href: string;
  color: string;
}

const { href, title, description, color } = Astro.props;
---

<a href={href}>
  <div class="staff-card">
    <div class="staff-card-heading">
      <h3 style=`color: ${color};`>
        {title}
      </h3>
      <svg
        class="page_arrow__aT3u3"
        width="21"
        height="17"
        viewBox="0 0 21 17"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          id="Vector"
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M12.2466 16.7533L20.5723 8.42771L12.2466 0.102128L10.0265 2.3222L14.5621 6.85836L0.24486 6.85806L0.245436 9.99791L14.5618 9.99791L10.0265 14.5332L12.2466 16.7533Z"
          fill={color}></path></svg
      >
    </div>
    <p>
      {description}
    </p>
  </div>
</a>

<style>
  a {
    display: block;
    border-radius: 4px;
    padding: 1.5rem;
    box-shadow: 0 1px 5px 0 #0000001a;
    line-height: 1.5;
  }

  .staff-card {
  }

  .staff-card-heading {
    margin-bottom: 1rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.7rem;
    line-height: 1.3;
  }
  .staff-card-heading h3 {
    font-size: 1.5rem;
    font-family: var(--font-chivo);
    font-weight: 700;
  }

  .staff-card p {
    font-size: 0.875rem;
    width: 100%;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-family: var(--font-chivo);
  }
</style>
