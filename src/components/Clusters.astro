---
import ClusterSection from './ClusterSection.astro';

import clustersData from '../data/clusters.json';
---

<main>
  <div class="main-message">
    <section>
      <blockquote>
        <p>
          This year, The GUIDON deepens its commitment to verity and justice by Standing with the
          Truth.
        </p>
        <p>
          To Stand with the Truth is also to stand with the people whose realities are marked by
          oppression and injustice.
        </p>
      </blockquote>
      <iframe
        class="message-vid"
        src="https://drive.google.com/file/d/1eHSQMr1R96SxDHNQO0dutyI-4bq0WldX/preview"
        allow="autoplay"></iframe>
    </section>
  </div>
  {
    Object.entries(clustersData.clusters).map(([_, cluster]) => {
      return <ClusterSection title={cluster.title} staffs={cluster.staffs} />;
    })
  }
</main>

<style>
  main {
    padding: 1.5rem 1rem;
  }

  .main-message {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .main-message section {
    width: 20rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .main-message section blockquote {
    width: 20rem;
    margin-bottom: 1.5rem;
  }

  blockquote p:first-of-type {
    font-family: var(--font-chivo);
    font-size: 1rem;
    line-height: 150%;
    margin-bottom: 0.75rem;
  }

  blockquote p:nth-of-type(2) {
    font-family: var(--font-tiempos-headline);
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--primary-guidon-main);
    line-height: 130%;
  }

  .message-vid {
    aspect-ratio: 16/9;
    width: 20rem;
  }

  @media (min-width: 700px) {
    main {
      padding: 2.5rem;
    }

    .main-message section {
      width: 41.5rem;
      flex-direction: row;
      justify-content: space-between;
      column-gap: 1rem;
    }

    .main-message section blockquote {
      width: 15rem;
      margin-right: 1.5rem;
    }

    .message-vid {
      width: 26.5rem;
    }
  }

  @media (min-width: 1000px) {
    main {
      padding: 3.5rem 7.5rem;
    }
  }

  @media (min-width: 1240px) {
    .main-message section {
      width: 63rem;
      column-gap: 2rem;
    }
    .main-message section blockquote {
      width: 23rem;
    }

    blockquote p:first-of-type {
      margin-bottom: 1.5rem;
    }
    blockquote p:nth-of-type(2) {
      font-size: 2rem;
    }

    .message-vid {
      width: 41.5rem;
    }
  }
</style>
